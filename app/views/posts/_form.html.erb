
<div class="card border" style="width: 33rem;margin-left: 550px;height: 300px;">
  <div class="card-body">
   <%= form_with(model: post) do |f| %>
   <% if post.errors.any? %>
   <div id="error_explanation">
    <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% post.errors.each do |error| %>
      <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
    <%= f.text_field :title, autofocus: true, autocomplete: "title",class: "form-control w-50" %>
  </div>

  <div class="row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Image</label>
    <%= f.file_field :image, autofocus: true, autocomplete: "image",class: "form-control w-50 btn btn-primary" %>
  </div>

  <div class="row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
    <%= f.text_area :description, autofocus: true, autocomplete: "description",class: "form-control w-50" %>
  </div>

  <div class="row">
    <%= f.submit "Submit",class: " btn btn-success" %>
  </div>
  <% end %>
  <div>
  </div>
</div>  

