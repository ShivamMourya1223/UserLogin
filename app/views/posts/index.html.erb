
<div id = "col">
  <h1>Posts</h1>

  <table border = 1>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
        <th>Images</th>
        <th>Likes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show',  post_path(post.id)%></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
         <td><%= image_tag(post.image.url , width:100) %></td>
       </td>
       <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
     </tr>
     <% end %>
   </tbody>
 </table>

 <br>

 <%= link_to 'New Post', new_post_path %><br>
 <%= link_to 'Back', root_path %>
</div>
