<div class="row justify-content-center"><nav class="navbar navbar-light bg-light justify-content-between">
</nav>
<div class="col-sm-4">
  <div class="card">
   <div class="card-header"><h2>SignUp!</h2></div>
   <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: "form-horizontal") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control w-50" %>
    </div>

    <div class="row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">UserName</label>
      <%= f.text_field :username, autofocus: true, autocomplete: "email",class: "form-control w-50" %>
    </div>

    <div class="row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Password</label>
      <%= f.password_field :password, autofocus: true, autocomplete: "email",class: "form-control w-50" %>
    </div>

    <div class="row">
      <label for="inputEmail3" class="col-sm-2 col-form-label"> Password Confirm </label>
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "email",class: "form-control w-50" %>
    </div>

    <div class="row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Role</label>
      <%= f.radio_button :role, "User" %>User
      <%= f.radio_button :role, "Creator" %>Creator
    </div>

    <div class="row">
      <div class="col text-center">
        <%= f.submit "Sign up",class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
</div>



